.description
  float left
  width 68%
  min-height 690px
  margin-left 2%

.description__menu
	margin 0
	padding 0

.description__list
  margin 0
  padding 0
  font-size 0
  border-bottom 1px solid $color-primary

.description__item
  width 50%
  display inline-block
  list-style none
  font-set($color-primary, 24px, 28px)
  padding 30px 25px

.description__item a
  text-decoration none
  color $color-primary
  &:hover
    text-decoration underline
  &:active
    text-decoration none
    color $color-accent

.description__content
  padding-top 20px
.description__title
  font-set($color-primary, 30px, 35px)
  font-weight 400

.description__text
  margin-bottom 20px
